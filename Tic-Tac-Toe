import random


#선주자(Player)
def player_():
    print('\033[33m'+'돌을 둘 곳을 입력하세요.')
    player = input('>> ')
    if player == 'a':
        if board[0][0] != '\033[37m'+"a":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[0][0] = '\033[96m'+"o"
    elif player == 'b':
        if board[0][1] != '\033[37m'+"b":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[0][1] = '\033[96m'+"o"
    elif player == 'c':
        if board[0][2] != '\033[37m'+"c":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[0][2] = '\033[96m'+"o"
    elif player == 'd':
        if board[1][0] != '\033[37m'+"d":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[1][0] = '\033[96m'+"o"
    elif player == 'e':
        if board[1][1] != '\033[37m'+"e":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[1][1] = '\033[96m'+"o"
    elif player == 'f':
        if board[1][2] != '\033[37m'+"f":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[1][2] = '\033[96m'+"o"
    elif player == 'g':
        if board[2][0] != '\033[37m'+"g":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[2][0] = '\033[96m'+"o"
    elif player == 'h':
        if board[2][1] != '\033[37m'+"h":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[2][1] = '\033[96m'+"o"
    elif player == 'i':
        if board[2][2] != '\033[37m'+"i":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            player_()
        else:
            board[2][2] = '\033[96m'+"o"
    else:
        print('판에 해당하는 위치에 돌을 두세요.')
        user1_()
    print('\033[33m'+(player)+'에 돌을 두었습니다.')


alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i']

#후주자(AI)
def AI_():
    ai = random.choice(alphabet)
    if ai == 'a':
        if board[0][0] != '\033[37m'+"a":
            AI_()
        else:
            board[0][0] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'b':
        if board[0][1] != '\033[37m'+"b":
            AI_()
        else:
            board[0][1] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'c':
        if board[0][2] != '\033[37m'+"c":
            AI_()
        else:
            board[0][2] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'd':
        if board[1][0] != '\033[37m'+"d":
            AI_()
        else:
            board[1][0] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'e':
        if board[1][1] != '\033[37m'+"e":
            AI_()
        else:
            board[1][1] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'f':
        if board[1][2] != '\033[37m'+"f":
            AI_()
        else:
            board[1][2] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'g':
        if board[2][0] != '\033[37m'+"g":
            AI_()
        else:
            board[2][0] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'h':
        if board[2][1] != '\033[37m'+"h":
            AI_()
        else:
            board[2][1] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')
    elif ai == 'i':
        if board[2][2] != '\033[37m'+"i":
            AI_()
        else:
            board[2][2] = '\033[91m'+"x"
            print('\033[33m' + (ai) + '에 돌을 두었습니다.')


def judge_player():
    if board[0][0] == '\033[96m'+"o" \
            and board[0][1] == '\033[96m'+"o" \
            and board[0][2] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[1][0] == '\033[96m'+"o" \
            and board[1][1] == '\033[96m'+"o" \
            and board[1][2] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[2][0] == '\033[96m'+"o" \
            and board[2][1] == '\033[96m'+"o" \
            and board[2][2] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[0][0] == '\033[96m'+"o" \
            and board[1][0] == '\033[96m'+"o" \
            and board[2][0] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[0][1] == '\033[96m'+"o" \
            and board[1][1] == '\033[96m'+"o" \
            and board[2][1] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[2][0] == '\033[96m'+"o" \
            and board[2][1] == '\033[96m'+"o" \
            and board[2][2] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[0][0] == '\033[96m'+"o" \
            and board[1][1] == '\033[96m'+"o" \
            and board[2][2] == '\033[96m'+"o":
        print('\033[92m'+'player의 승리')
        return False

    elif board[2][0] == '\033[96m'+"o" \
            and board[1][1] == '\033[96m'+"o" \
            and board[0][2] == '\033[96m'+"o":
        print('\033[93m'+'player의 승리')
        return False

    else:
        return True

def judge_ai():
    if board[0][0] == '\033[91m'+"x" \
            and board[0][1] == '\033[91m'+"x" \
            and board[0][2] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[1][0] == '\033[91m'+"x"\
            and board[1][1] == '\033[91m'+"x" \
            and board[1][2] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[2][0] == '\033[91m'+"x" \
            and board[2][1] == '\033[91m'+"x" \
            and board[2][2] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[0][0] == '\033[91m'+"x" \
            and board[1][0] == '\033[91m'+"x" \
            and board[2][0] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[0][1] == '\033[91m'+"x" \
            and board[1][1] == '\033[91m'+"x" \
            and board[2][1] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[2][0] == '\033[91m'+"x" \
            and board[2][1] == '\033[91m'+"x" \
            and board[2][2] == '\033[91m'+"x":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[0][0] == '\033[91m'+"x" \
            and board[1][1] == '\033[91m'+"x" \
            and board[2][2] == '\033[96m'+"o":
        print('\033[92m'+'AI의 승리')
        return False

    elif board[2][0] == '\033[96m'+"o" \
            and board[1][1] == '\033[96m'+"o" \
            and board[0][2] == '\033[96m'+"o":
        print('\033[93m'+'AI의 승리')
        return False

    else:
        return True







############################# GAME:AI #############################
def AI():
    global TF
    print('\033[33m'+'AI게임을 시작합니다.')
    while TF:
            now()
            TF = judge_ai()
            if TF == True:
                pass
            else:
                break
            player_()
            now()
            TF = judge_player()
            if TF == True:
                pass
            else:
                break
            AI_()
            time.sleep(0.1)


############################ LOBBY ############################
def start():
    print('\033[36m'+'Tic-Tac-Toe!')
    print('\033[36m'+'원하시는 게임을 선택해주세요.')
    print('\033[32m'+'''1.PVP
2.AI''')
    a = int(input())
    if a == 1:
        PVP()
    elif a == 2:
        AI()

start()

