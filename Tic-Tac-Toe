o1 = board[0][0] == '\033[91m'+"o"
o2 = board[0][1] == '\033[91m'+"o"
o3 = board[0][2] == '\033[91m'+"o"
o4 = board[1][0] == '\033[91m'+"o"
o5 = board[1][1] == '\033[91m'+"o"
o6 = board[1][2] == '\033[91m'+"o"
o7 = board[2][0] == '\033[91m'+"o"
o8 = board[2][1] == '\033[91m'+"o"
o9 = board[2][2] == '\033[91m'+"o"

#승리 판단
def judge():
    if o1:
        if o2 and o3 or o4 and o7 or o5 and o9:
        elif o4 and o7:
        elif o5 and o9:
        print('\033[92m'+'user1의 승리')
        return False

    elif o4 and o5 and o6:
        print('\033[92m'+'user1의 승리')
        return False

    elif o7 and o8 and o9:
        print('\033[92m'+'user1의 승리')
        return False

    # elif o1 and o4 and o7:
    #     print('\033[92m'+'user1의 승리')
    #     return False

    elif o2 and o5 and o8:
        print('\033[92m'+'user1의 승리')
        return False

    elif o7 and o8 and o9:
        print('\033[92m'+'user1의 승리')
        return False

    # elif o1 and o5 and o9:
    #     print('\033[92m'+'user1의 승리')
    #     return False

    elif o7 and o5 and o3:
        print('\033[33m'+'user1의 승리')
        return False

    else:
        return True

T1 = board[0][0] == '\033[91m'+"x"
T2 = board[0][1] == '\033[91m'+"x"
T3 = board[0][2] == '\033[91m'+"x"
T4 = board[1][0] == '\033[91m'+"x"
T5 = board[1][1] == '\033[91m'+"x"
T6 = board[1][2] == '\033[91m'+"x"
T7 = board[2][0] == '\033[91m'+"x"
T8 = board[2][1] == '\033[91m'+"x"
T9 = board[2][2] == '\033[91m'+"x"

def judge2():
    if T1 and T2 and T3:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T4 and T5 and T6:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T7 and T8 and T9:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T1 and T4 and T7:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T2 and T5  and T8:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T7 and T8 and T9:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T1 and T5 and T9:
        print('\033[92m' + 'user2의 승리')
        return False

    elif T7 and T5 and T3:
        print('\033[33m' + 'user2의 승리')
        return False

    else:
        return True


#판
def now():
    for f, s, t in board:
        print(f, s, t)


TF = True


############################# GAME:PVP #############################
def PVP():
    global TF
    print('\033[33m'+'PVP게임을 시작합니다.')
    while TF:
            now()
            TF = judge2()
            if TF == True:
                pass
            else:
                break
            user1_()
            now()
            TF = judge()
            if TF == True:
                pass
            else:
                break
            user2_()

