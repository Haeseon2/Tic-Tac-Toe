        else:
            board[1][1] = '\033[96m'+"o"
    elif user1 == 'f':
        if board[1][2] != '\033[37m'+"f":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            user1_()
        else:
            board[1][2] = '\033[96m'+"o"
    elif user1 == 'g':
        if board[2][0] != '\033[37m'+"g":
            print('이미 돌이 있습니다. 다른 곳에 두세요.')
            user1_()
        else:
            board[2][0] = '\033[96m'+"o"
    elif user1 == 'h':
